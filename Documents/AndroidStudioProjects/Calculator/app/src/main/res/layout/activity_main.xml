<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="criley.calculator.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="output"
            android:layout_gravity="right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp" android:id="@+id/answer"/>

    <GridLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="5"
                android:columnCount="4">


        <Button
                android:text="Clear"
                android:id="@+id/clear"
                android:onClick="clear"/>
        <Button
                android:text="+/-"
                android:id="@+id/negative"
                android:onClick="negative"/>
        <Button
                android:text="%"
                android:id="@+id/percent"
                android:onClick="percent"/>
        <Button
                android:text="÷"
                android:id="@+id/division"
                android:onClick="divide"/>
        <Button
                android:text="7"
                android:id="@+id/seven"
                android:onClick="numSeven"/>
        <Button
                android:text="8"
                android:id="@+id/eight"
                android:onClick="numEight"/>
        <Button
                android:text="9"
                android:id="@+id/nine"
                android:onClick="numNine"/>
        <Button
                android:text="X"
                android:id="@+id/mult"
                android:onClick="multiply"/>
        <Button
                android:text="4"
                android:id="@+id/four"
                android:onClick="numFour"/>
        <Button
                android:text="5"
                android:id="@+id/five"
                android:onClick="numFive"/>
        <Button
                android:text="6"
                android:id="@+id/six"
                android:onClick="numSix"/>
        <Button
                android:text="—"
                android:id="@+id/sub"
                android:onClick="subtract"/>
        <Button
                android:text="1"
                android:id="@+id/one"
                android:onClick="numOne"/>
        <Button
                android:text="2"
                android:id="@+id/two"
                android:onClick="numTwo"/>
        <Button
                android:text="3"
                android:id="@+id/three"
                android:onClick="numThree"/>
        <Button
                android:text="+"
                android:id="@+id/add"
                android:onClick="addition"/>
        <Button
                android:text="0"
                android:layout_columnSpan="2"
                android:layout_width="175sp"
                android:id="@+id/zero"
                android:onClick="numZero"/>
        <Button
                android:text="."
                android:id="@+id/decimal"
                android:onClick="addDecimal"/>
        <Button
                android:text="="
                android:id="@+id/equal"
                android:onClick="equals"/>
    </GridLayout>

</LinearLayout>
